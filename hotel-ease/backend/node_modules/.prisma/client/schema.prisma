generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id        Int       @id @default(autoincrement())
  nome      String
  cidade    String
  preco     Float
  vagas     Int
  img       String?
  createdAt DateTime  @default(now())
  reservas  Reserva[]
}

model Reserva {
  id      Int      @id @default(autoincrement())
  email   String
  nome    String
  data    DateTime @default(now())
  hotelId Int
  hotel   Hotel    @relation(fields: [hotelId], references: [id])
}
